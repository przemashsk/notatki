RewriteEngine On
RewriteBase /

# jeśli plik istnieje – serwuj normalnie
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# jeśli katalog istnieje – serwuj normalnie
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# w każdym innym wypadku zwróć index.html
RewriteRule ^ index.html [L]
